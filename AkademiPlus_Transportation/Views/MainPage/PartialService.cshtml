<section class="w3l-features py-5" id="features">
    <div class="container py-lg-5 py-md-4 py-2">
        <div class="title-content text-center mb-lg-3 mb-4">
            <h6 class="title-subw3hny mb-1">@ViewBag.title1</h6>
            <h3 class="title-w3l">@ViewBag.title2</h3>
        </div>
        <div class="main-cont-wthree-2">
            <div class="row justify-content-center">
                <div class="col-lg-4 col-md-6 mt-lg-5 mt-4">
                    <div class="grids-1 box-wrap">
                        <div class="icon">
                            <i class="fas fa-truck"></i>
                        </div>
                        <h4><a href="#service" class="title-head mb-3">@ViewBag.leftText</a></h4>
                        <p class="text-para">Karadan, havadan, denizden ve raylı sistem ile kargolarınızı güvenli ve kusursuz bir şekilde ulaştırıyoruz. </p>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 mt-lg-5 mt-4">
                    <div class="grids-1 box-wrap">
                        <div class="icon">
                            <i class="fas fa-chalkboard-teacher"></i>
                        </div>
                        <h4><a href="#service" class="title-head mb-3">@ViewBag.middleText</a></h4>
                        <p class="text-para">7/24 Canlı destek hattımız ile her zaman yanınızdayız</p>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 mt-lg-5 mt-4">
                    <div class="grids-1 box-wrap">
                        <div class="icon">
                            <i class="fas fa-people-carry"></i>
                        </div>
                        <h4><a href="#service" class="title-head mb-3">@ViewBag.rightText</a></h4>
                        <p class="text-para">Dünyanın neresinde olursanız olun geliyoruz ve götürüyoruz</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
