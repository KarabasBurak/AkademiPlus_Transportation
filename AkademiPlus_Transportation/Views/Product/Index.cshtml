@model List<AkademiPlus_Transportation.Models.TblProduct>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Ürün Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Ürün Adı</th>
        <th>Ürün Boyut Tipi</th>
        <th>Ürün Boyutu</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach(var item in Model)
            {
             <tr>
                 <td>@item.ProductID</td>
                 <td>@item.ProductName</td>
                 <td>@item.ProductSizeType</td>
                 <td>@item.ProductSize</td>
                 <td><a href="/Product/DeleteProduct/@item.ProductID" class="btn btn-danger">Sil</a></td>
                 <td><a href="/Product/UpdateProduct/@item.ProductID" class="btn btn-success">Güncelle</a></td>
             </tr>           
            }
</table>
<a href="/Product/AddProduct/" class="btn btn-primary">Yeni Ürün Kaydı</a>






